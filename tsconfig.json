{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "./",
        "strict": true,
        "baseUrl": "./",
        "noImplicitAny": true,
        "typeRoots": [
            "node_modules/@types",
            "src/@types"
        ],
        "types": [
            "node",
            "jest"
        ],
        "allowJs": false,
        "esModuleInterop": true,
        "sourceMap": true,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts",
        "ormconfig.ts"
    ]
}
